<% if user_signed_in? %>
    <% if item.liked_by?(current_user) %>
      <p><span>❤︎: </span><%=link_to item.likes.count, item_likes_path(item.id), method: :delete, remote: true %></p>
      <% else %>
          <p><span>❤︎: </span><%=link_to item.likes.count, item_likes_path(item.id), method: :post , remote: true %></p>
      <% end %>
<% else %>
  <p><span>❤︎: </span><%= item.likes.count %></p>
<% end %>
