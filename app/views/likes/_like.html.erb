<% if user_signed_in? %>
    <% if @item.liked_by?(current_user) %>
      <p><span>いいね: </span><%=link_to @item.likes.count, item_likes_path(@item.id), method: :delete, remote: true %></p>
      <% else %>
          <p><span>いいね: </span><%=link_to @item.likes.count, item_likes_path(@item.id), method: :post , remote: true %></p>
      <% end %>
<% else %>
  <p><span>お気に入り数: </span><%= @item.likes.count %></p>
<% end %>