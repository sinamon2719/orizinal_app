<div class='account-page mastheadz'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <p class="font-weight-bold h1">Log in</p>
      <p class="font-weight-bold h5">登録しているユーザーでログイン</p>
      <%= render "devise/shared/links"%>
    </div>

  <div class='account-page__inner--right user-form'>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class='field'>
        <div class='field-label'>
          <div class="font-weight-bold h5">
            <%= f.label :email%>
          </div>

            <div class='field-input'>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

          <div class='field'>
            <div class='field-label'>
              <div class="font-weight-bold h5">
                <%= f.label :password %>
                <i>(英数字6文字以上)</i>
              </div>

              <div class='field-input'>
                <%= f.password_field :password, autocomplete: "current-password" %>
              </div>
            </div>

              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
              <% end %>

              <div class="actions">
                <%= f.submit "Log in", class: 'btn'%>
              </div>
          </div>
        <% end %>
    </div>
  </div>
</div>
