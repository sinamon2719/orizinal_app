<div class='account-page mastheadx'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <p class="font-weight-bold h1">Edit Account</p>
      <p class="font-weight-bold h5">アカウントの編集</p>
      <%= link_to "ログアウト",  destroy_user_session_path, method: :delete,class: 'btn'%>
      <%= link_to "メインページに戻る", root_path, class: 'btn'%>
    </div>

    <div class='account-page__inner--right user-form'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <div class='field'>
          <div class='field-label'>
            <div class="font-weight-bold h5">
            <%= f.label :nickname %>
            </div>
          <div class='field-input'>
            <%= f.text_field :nickname, autofocus: true%>
          </div>
        </div>

        <div class='field'>
          <div class='field-label'>
            <div class="font-weight-bold h5">
              <%= f.label :email %><br />
            </div>
          <div class='field-input'>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>

        <div class="field">
          <div class='field-label'>
            <div class="font-weight-bold h5 text-danger">
              <%= f.label :current_password %><br />
            </div>
            <div class='field-input'>
              <%= f.password_field :current_password, autocomplete: "current-password" %>
            </div>
          </div>

          <div class="actions">
            <%= f.submit "Update", class: 'btn'%>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>