<div class="container-fluids">
    <div class="container-fluid">
    <%=image_tag "portfolio/fullsize/21.png", class:"img-fluid mb-5 mt-5"%>
    <br>
    <%=image_tag "portfolio/fullsize/20.png", class:"img-fluid mb-5 mt-5"%>
    </div>
<div class="container">
    <div class='transaction-main mx-auto'>
        <h1 class='transaction-title-text'>
        購入内容の確認
        </h1>
            <div class='buy-item-info'>
              <%= image_tag @item.image, class: 'buy-item-img' %>
            </div>
            <div class='buy-item-right-content'>
    
          <%= form_with url:item_orders_path, id: 'charge-form', class: 'transaction-form-wrap',local: true do |f| %>
          <%= render 'layouts/error_messages', model: @order %>

              <div class='item-payment'>
                <h1 class='item-payment-title'>
                  支払金額
                </h1>
              <p class='item-payment-price'>
                ¥<%= @item.price %>
              </p>
              </div>
    
      <div class="row">
        <h1 class='info-input-haedline'>
          クレジットカード情報入力
        </h1>
      </div>

          <div class='credit-card-form'>
            <div class="form-group">
              <div class='form-text-wrap'>
                <label class="form-text">カード情報</label>
                  <span class="indispensable">必須</span>
              </div>

              <%= f.text_field :number, class:"input-default", id:"card-number", placeholder:"カード番号(半角英数字)", maxlength:"16" %>
              <div class='available-card'>
                <%= image_tag 'card-icon/card-visa.gif', class: 'card-logo'%>
                <%= image_tag 'card-icon/card-mastercard.gif', class: 'card-logo'%>
                <%= image_tag 'card-icon/card-jcb.gif', class: 'card-logo'%>
              </div>
            </div>

        <div class="form-groups">
          <div class='form-text-wrap text-center'>
            <label class="form-text">有効期限</label>
          </div>
            <div class='input-expiration-date-wrap '>
              <div class="form-group row justify-content-center">
                  <%= f.text_area :exp_month, class:"input-expiration-date ", id:"card-exp-month", placeholder:"例)3"%>
                  <p>月</p>
                  <%= f.text_area :exp_year, class:"input-expiration-date", id:"card-exp-year", placeholder:"例)23"%>
                  <p>年</p>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class='form-text-wrap'>
              <label class="form-text">セキュリティコード</label>
            </div>
              <%= f.text_field :cvc,class:"input-default", id:"card-cvc", placeholder:"カード背面4桁もしくは3桁の番号", maxlength:"30" %>
          </div>
        </div>
      <%# /カード情報の入力 %>

      <%# 配送先の入力 %>
      <div class='shipping-address-form '>
          <h1 class='info-input-haedline'>
            配送先入力
          </h1>
              <div class="form-group">
                <div class='form-text-wrap'>
                  <label class="form-text">郵便番号</label>
                </div>
                <%= f.text_field :post_code, class:"input-default", id:"postal-code", placeholder:"例）123-4567", maxlength:"20" %>
              </div>

              <div class="form-group">
                <div class='form-text-wrap'>
                  <label class="form-text">都道府県</label>
                </div>
                <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {include_blank: '指定なし'}) %>
              </div>
              <div class="form-group">
                <div class='form-text-wrap'>
                  <label class="form-text">市区町村</label>
                </div>
                <%= f.text_field :city, class:"input-default", id:"city", placeholder:"例）横浜市緑区"%>
              </div>

            <div class="form-group">
              <div class='form-text-wrap'>
                <label class="form-text">番地</label>
              </div>
              <%= f.text_field :address, class:"input-default", id:"addresses", placeholder:"例）青山1-1-1"%>
            </div>

            <div class="form-group">
              <div class='form-text-wrap'>
                <label class="form-text">建物名</label>
              </div>
                <%= f.text_field :building_name, class:"input-default", id:"building", placeholder:"例）柳ビル103"%>
              </div>

            <div class="form-group">
              <div class='form-text-wrap'>
                <label class="form-text">電話番号</label>
              </div>
                <%= f.text_field :phone_number, class:"input-default", id:"phone-number", placeholder:"例）09012345678",maxlength:"20"%>
              </div>
        </div>
    <%# /配送先の入力 %>
    <div class='buy-btn buy-red-btn' >
      <%= f.submit "購入" ,class:"buy-red-btn" %>
    </div>
  <% end %>
</div>
</div>